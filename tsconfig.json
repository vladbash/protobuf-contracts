{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "es2022",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "*": [
          "node_modules/*", 
          "src/types/*",
          "config/*",
        ]
      },
    },
    "include": ["src/**/*", "test/**/*",  "config/*"]
  }
  